<%- include("partials/header"); %>
<style>
	body {
		background-color: #454545;
	}
	.carousel {
		padding: 0px;
		height: 100%;
	}
	/* Since positioning the image, we need to help out the caption */
	.carousel-caption {
		z-index: 10;
	}

	/* Declare heights because of positioning of img element */
	.carousel .item {
		height: 100%;
		background-color: #777;
	}
	.carousel-inner > .item > img {
		position: absolute;
		top: 0;
		left: 0;
		min-width: 100%;
		height: 100%;
	}
	.login-form {
		margin: 0px;
		background-color: #ffffff;
		padding: 30px;
		padding-left: 80px;
		padding-right: 80px;
		height: 100%;
	}

	.login-form img {
		width: 100%;
		margin-top: 50px;
		margin-bottom: 40px;
	}

	.input-group input{
		padding: 10px;
		margin-bottom: 10px;
	}

	.login-form input {
		width: 100%;
		padding: 10px;
		margin-bottom: 10px;
	}

	.login-form button {
		width: 100%;
		padding: 10px;
		margin-top: 20px;
		border: none;
		background-color: #297ece;
		color: white;
	}

	.login-form button:hover {
		opacity: 0.7;
	}

	#credit {
		position: absolute;
		bottom: 0;
		right: 0;
		text-align: right;
		margin-right: 10px;
	}

	#aircast {
		width: 8%;
	}

	.floating-logo {
		position: absolute;
		top: 25%;
		left: 7%;
		z-index: 1;
	}

	output {
		display: none;
		padding: 10px;
		background-color: rgba(255, 0, 0, .3);
		border-left: 3px solid red;
		margin-bottom: 15px;
	}

	@media (max-width: 768px) { 
		.floating-logo {
			display: none;
		}

		.carousel {
			display: none;
		}
	}

</style>
</head>
	<body>
		<script>
			function init() {
				if (!sessionStorage.userID) {
					sessionStorage.userID = "";
				}
				if (sessionStorage.userID != "") {
					window.location.href = '/home';
				}
			}

			window.onload = init();
		</script>
		<div class="container-fluid">
			<div class="row">
				<!--<div class="floating-logo col-md-8">
					<img id src="img/floating-logo.png">
				</div>-->
				<div id="myCarousel" class="carousel slide col-md-8" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                    	<div class="item active">
                      		<img src="img/01.jpg" alt="First slide">
                     	</div>
                     	<div class="item">
                      		<img src="img/02.jpg" alt="Second slide">
                     	</div>
                     	<div class="item">
                      		<img src="img/03.jpg" alt="Third slide">
                     	</div>
                    </div>
                </div>
                <div class="col-md-4 login-form">
                	<form action="" onsubmit="login(); return false">
	                	<img class="col-md-12" src="img/title.png">
	                	<output class="col-md-12" id="output_prompt">Wrong username/password.</output>
						<input class="col-md-12" type="text" id="username" required placeholder="Username"/>
						<input class="col-md-12 "  type="password" id="password" required placeholder="Password"/>
						<button class="col-md-12" type="submit">LOGIN</button>
					</form>
				</div>
				<span id="credit">Powered by <img id='aircast' src="img/aircast.png"></span>
			</div>
		</div>

		<script src="js/jquery-3.1.1.min.js"></script>
  		<script src="js/jquery-ui.min.js"></script>
		<script src="dist/js/bootstrap.min.js"></script>
		<script src="js/carousel.js"></script>
	</body>
	<script>
		function login () {
			var username = document.getElementById('username');
			var password = document.getElementById('password');
			var prompt = document.getElementById('output_prompt');

			var data = {
				Action: "login",
				UserName: username.value,
				Password: password.value
			}
			console.log(data);
			$.ajax ({
				method: 'POST',
				url: 'https://dashboard.aircast.ph/login',
				data: data,
				dataType: 'json',
				success: function (res) {
					console.log(res);
					if (res.status == "ok" && res.isUserValid == true && res.Location == "tua") {
						prompt.style.display = 'none';
						sessionStorage.userID = res.UserID;
						sessionStorage.accessLevel  = res.Roles;
						window.location.href = '/home';
					} else {
						prompt.style.display = 'block';
						username.focus();
					}
				}
			})
		}
	</script>
</html>